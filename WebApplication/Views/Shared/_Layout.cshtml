                                        </script>
                                    </div>
                                </div>

                                <div class="single-contact-info d-flex">
                                    <div class="icon">
                                        <i class="icon_globe-2"></i>
                                    </div>
                                    <div class="text">
                                        <a asp-controller="Home" asp-action="Index">mandak.hu</a>
                                    </div>
                                </div>

                                <div class="single-contact-info d-flex">
                                    <div class="icon">
                                        <i class="icon_creditcard"></i>
                                    </div>
                                    <div class="text">
                                        <a href="#">11705008-20431675</a>
                                    </div>
                                </div>

                                <div class="single-contact-info d-flex">
                                    <div class="icon">
                                        <i class="icon_percent"></i>
                                    </div>
                                    <div class="text">
                                        <a href="#">18660582-1-41</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-xl-3">
                        <div class="single-footer-widget mb-80">
                            <img src="~/img/core-img/luther_rozsa.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="copywrite-area">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="copywrite-text">
                            <p>
                                &copy;
