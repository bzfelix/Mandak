<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="description" content="A Mandák Kórus hivatalos weboldala.">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta property="og:url" content="@Html.Raw(ViewBag.MetaUrl ?? "http://mandak.hu")" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@Html.Raw(ViewBag.MetaTitle ?? "Mandák Kórus")" />
    <meta property="og:description" content="@Html.Raw(ViewBag.MetaDescription ?? "A Mandák Kórus hivatalos weboldala.")" />
    <meta property="og:image" content="@Html.Raw(ViewBag.MetaImage ?? "http://mandak.hu/img/core-img/logo.jpg")" />

    <title>Mandák kórus</title>

    <link rel="icon" href="~/img/core-img/favicon.ico">

    <link rel="stylesheet" href="~/style.css">
</head>
<body>
    <div id="preloader">
        <div>
            <div class="spinner">
                <div class="double-bounce1"></div>
                <div class="double-bounce2"></div>
            </div>
            <span>Kérem, várjon...</span>
        </div>
    </div>

    <div class="razo-social-share-area">
        <a href="https://www.facebook.com/Mandakkorus/" class="facebook" target="_blank">
            <i class="fa fa-facebook"></i>
        </a>
        <a href="https://www.youtube.com/channel/UCVXDAmzjSaSR4K7B2_hTU8A/featured"
           class="youtube" target="_blank">
            <i class="fa fa-youtube"></i>
        </a>
    </div>

    <header class="header-area">
        <div class="main-header-area">
            <div class="classy-nav-container breakpoint-off">
                <div class="container">
                    <nav class="classy-navbar justify-content-between" id="razoNav">
                        <a class="nav-brand" asp-controller="Home" asp-action="Index">
                            <img src="~/img/core-img/logo.png" alt="Kezdőlap">
                        </a>

                        <div class="classy-navbar-toggler">
                            <span class="navbarToggler">
                                <span></span><span></span><span></span>
                            </span>
                        </div>

                        <div class="classy-menu">
                            <div class="classycloseIcon">
                                <div class="cross-wrap">
                                    <span class="top"></span><span class="bottom"></span>
                                </div>
                            </div>

                            <div class="classynav">
                                <ul id="nav">
                                    <li>
                                        <a asp-controller="Home" asp-action="Index">Kezdőlap</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Home" asp-action="News">Események, aktualitások</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Gallery" asp-action="Index">Galéria</a>
                                    </li>
                                </ul>

                                <div class="social-share-icon">
                                    <i class="social_share"></i>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer class="footer-area">
        <div class="main-footer-area section-padding-80-0">
            <div class="container">
                <div class="row justify-content-between">
                    <div class="col-12 col-sm-6 col-md-4 col-xl-3">
                        <div class="single-footer-widget mb-80">
                            <a asp-controller="Home" asp-action="Index" class="footer-logo">
                                <img src="~/img/core-img/logo2.png" alt="">
                            </a>
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-xl-3">
                        <div class="single-footer-widget mb-80">
                            <h4 class="widget-title">Pro Musica Lutherana alapítvány</h4>
                            <div class="footer-content">
                                <div class="single-contact-info d-flex">
                                    <div class="icon">
                                        <i class="icon_pin"></i>
                                    </div>
                                    <div class="text">
                                        <a href="https://goo.gl/maps/ZUEwWQ4Q6bCQxu2T8" target="_blank">1026 Bp. Szilágyi Erzsébet fasor 17 1/7</a>
                                    </div>
                                </div>

                                <div class="single-contact-info d-flex">
                                    <div class="icon">
                                        <i class="icon_phone"></i>
                                    </div>
                                    <div class="text">
                                        <a href="tel:+703865628">+70/386-56-28</a>
                                    </div>
                                </div>

                                <div class="single-contact-info d-flex">
                                    <div class="icon">
                                        <i class="icon_mail_alt"></i>
                                    </div>
                                    <div class="text">
